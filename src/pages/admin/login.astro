---
import Layout from '../../layouts/Layout.astro';
import LoginForm from '../../components/admin/LoginForm.astro';

// Simple auth check - in a real app, this would verify a session token
const isLoggedIn = false;
---

{isLoggedIn ? (
    <meta http-equiv="refresh" content="0; url=/admin/dashboard" />
) : (
    <Layout title="Admin Login | Luxury Haven">
        <main class="admin-login-container">
            <LoginForm />
        </main>
    </Layout>
)}

<style>
    .admin-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 20px 40px;
    }
</style>